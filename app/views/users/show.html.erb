<div class = 'big-container'>
  <section class='section center-section'>
    <div class='cover-img'>
      <%= image_tag @user.cover_img %>
    </div>
    <article class="timeline">
      <h3 class='title is-4 t-blue'>
        Shared Opinions
      </h3>
      <ul class="posts">
        <%= render @user.opinions %>
      </ul>
    </article>
  </section>

  <section class='section right-section'>
    <div class= 'user-content'>
      <div class= image>
        <%= image_tag @user.photo %>
      </div>
      <p class= 'username'>@<%= @user.username %></p>
      <div class= 'details'>
        <div class= 'detail'>
          <p><%= @user.opinions.count %></p>
          <p>Opinions</p>
        </div>
        <div class= 'detail'>
          <p><%= @user.followers.count %></p>
          <p>Followers</p>
        </div>
        <div class= 'detail'>
          <%= @user.followeds.count %>
          <p>Following</p>
        </div>
      </div>
    </div>
    <div>
      <h3 class='title is-4 t-blue center'>Followers</h3>
      <ul>
        <%= render @followers %>
      </ul>
    </div>
  </section>
</div>
