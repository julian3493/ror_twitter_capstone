<aside class="menu bg-dark">
  <p class="menu-label">
    General
  </p>
  <ul class="menu-list">
    <li><a>Dashboard</a></li>
    <li><a>Customers</a></li>
  </ul>
</aside>

<div class = 'big-container'>
  <section class='section center-section'>
    <%= form_for(@opinion) do |form| %>
      <%= form.label :content %>
      <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    <% end %>

    <article class="timeline">
      <h3 class='title is-4 t-blue'>
        Shared Opinions
      </h3>
      <ul class="posts">
        <%= render @opinions %>
      </ul>
    </article>
  </section>

  <section class='section right-section'>
    <div>
      <h3 class='title is-4 t-blue'>Who to follow</h3>
      <ul>
        <%= render @not_followed%>
      </ul>
    </div>
  </section>
</div>
