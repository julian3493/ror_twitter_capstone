<%= form_for(@opinion) do |form| %>
  <%= form.label :content %>
  <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
  <h3>
    Recent posts
  </h3>
  <ul class="posts">
    <%= render @opinions %>
  </ul>
</article>

<div>
  <h3>Who to follow</h3>
  <ul>
    <%= render @not_followed%>
  </ul>
</div>
